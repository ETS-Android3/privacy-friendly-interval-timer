<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.secuso.privacyfriendlyexample.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical"
    style="@style/AlertDialog.AppCompat"
    android:weightSum="1">

    <Button
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="60dp"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:background="@drawable/button_fullwidth"
        android:text="@string/workout_button_text"
        android:id="@+id/workout_button"
        android:drawableTop="@drawable/ic_menu_gallery"
        android:onClick="onClick"
        android:layout_gravity="center"/>

    <Button
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="40dp"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:background="@drawable/button_fullwidth"
        android:text="@string/exercises_button_text"
        android:id="@+id/exercises_button"
        android:drawableTop="@drawable/ic_menu_gallery"
        android:onClick="onClick"
        android:layout_gravity="center" />

    <Button
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="40dp"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:background="@drawable/button_fullwidth"
        android:text="@string/statistics_button_text"
        android:id="@+id/statistics_button"
        android:drawableTop="@drawable/ic_menu_gallery"
        android:onClick="onClick"
        android:layout_gravity="center" />

</LinearLayout>
