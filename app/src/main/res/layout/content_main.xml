<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    style="@style/AlertDialog.AppCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.secuso.privacyfriendlytraining.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/main_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/main_text_title"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/main_text_work_interval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="@string/main_text_work_interval"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="fill_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_workout_interval_minus"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/textView1"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:background="@drawable/button_normal"
            android:onClick="onClick"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_workout_interval_time"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/main_workout_interval_minus"
            android:layout_alignBottom="@+id/main_workout_interval_minus"
            android:layout_toStartOf="@+id/main_workout_interval_plus"
            android:layout_weight="2.06"
            android:gravity="center"
            android:text="00 : 00"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_workout_interval_plus"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/main_text_work_interval"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:background="@drawable/button_normal"
            android:onClick="onClick"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/main_text_rest_interval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="@string/main_text_rest_interval"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="fill_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_rest_interval_minus"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/textView1"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:background="@drawable/button_normal"
            android:onClick="onClick"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_rest_interval_time"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/main_workout_interval_minus"
            android:layout_alignBottom="@+id/main_workout_interval_minus"
            android:layout_toStartOf="@+id/main_workout_interval_plus"
            android:layout_weight="0.11"
            android:gravity="center"
            android:text="00 : 00"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_rest_interval_plus"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/main_text_work_interval"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:background="@drawable/button_normal"
            android:onClick="onClick"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/main_text_sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="@string/main_text_sets"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="fill_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_sets_minus"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/textView1"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:background="@drawable/button_normal"
            android:onClick="onClick"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_sets_amount"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/main_workout_interval_minus"
            android:layout_alignBottom="@+id/main_workout_interval_minus"
            android:layout_toStartOf="@+id/main_workout_interval_plus"
            android:layout_weight="0.11"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_sets_plus"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/main_text_work_interval"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:background="@drawable/button_normal"
            android:onClick="onClick"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/main_block_periodization"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_normal"
        android:elevation="0dp"
        android:onClick="onClick"
        android:text="@string/main_block_periodization"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:weightSum="5">
    </LinearLayout>

</LinearLayout>
