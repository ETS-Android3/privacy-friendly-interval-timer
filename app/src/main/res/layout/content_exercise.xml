<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_exercise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.secuso.privacyfriendlyexample.ExerciseActivity"
    tools:showIn="@layout/activity_exercise">


    <ToggleButton
        android:textOff="@string/pause_button_resume"
        android:textOn="@string/pause_button_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/button_fullwidth"
        android:textSize="25sp"
        android:id="@+id/pauseButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="57dp" />

    <TextView
        android:text="@string/exercise_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:id="@+id/timer"
        android:layout_marginBottom="27dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="56sp"
        android:layout_above="@+id/pauseButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/exercise_timer_text_during"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timerMessage"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="15sp"
        android:layout_above="@+id/timer"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/exercise_pushups_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="@string/exercise_pushups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
